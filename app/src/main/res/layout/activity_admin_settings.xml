<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Displaying Fragments -->
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/list_divider"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="?attr/color_1"
                    android:id="@+id/list_item_1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:id="@+id/icon0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/person_white"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/title0"
                        android:layout_width="fill_parent"
                        android:paddingLeft="15dp"
                        android:background="#ffff"
                        android:text="Sort Users"
                        android:layout_height="match_parent"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:background="?attr/color_1"></RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#C0C0C0"></RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/list_item_2"
                    android:background="?attr/color_2"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/description_list_icon"
                            android:src="@drawable/fingerprint"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="fill_parent"
                        android:paddingLeft="15dp"
                        android:background="#ffff"
                        android:text="Password"
                        android:layout_height="match_parent"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:background="?attr/color_2"></RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#C0C0C0"></RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/list_item_3"
                    android:background="?attr/color_3"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/description_list_icon"
                            android:src="@drawable/paint"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="fill_parent"
                        android:paddingLeft="15dp"
                        android:background="#ffff"
                        android:text="Theme"
                        android:layout_height="match_parent"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:background="?attr/color_3"></RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#C0C0C0"></RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="?attr/color_4"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/description_list_icon"
                            android:src="@drawable/bell"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/title3"
                            android:layout_width="match_parent"
                            android:paddingLeft="15dp"
                            android:background="#ffff"
                            android:text="Notifications"
                            android:layout_height="match_parent"
                            android:minHeight="?android:attr/listPreferredItemHeightSmall"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"/>

                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/switch1"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="25dp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:background="?attr/color_4"></RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#C0C0C0"></RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="?attr/color_5"
                    android:id="@+id/list_item_4"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:id="@+id/icon4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/description_list_icon"
                            android:src="@drawable/ruler"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="fill_parent"
                        android:paddingLeft="15dp"
                        android:background="#ffff"
                        android:text="Break Length"
                        android:layout_height="match_parent"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:background="?attr/color_5"></RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#C0C0C0"></RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/list_item_5"
                    android:background="?attr/color_1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:id="@+id/icon5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/description_list_icon"
                            android:src="@drawable/triangle"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/title5"
                        android:layout_width="fill_parent"
                        android:paddingLeft="15dp"
                        android:background="#ffff"
                        android:text="Zone Settings"
                        android:layout_height="match_parent"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:background="?attr/color_1"></RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#C0C0C0"></RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:id="@+id/list_item_6"
                    android:background="?attr/color_2"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:id="@+id/icon6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/description_list_icon"
                            android:src="@drawable/arror"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/title6"
                        android:layout_width="fill_parent"
                        android:paddingLeft="15dp"
                        android:background="#ffff"
                        android:text="Break Buffer"
                        android:layout_height="match_parent"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:background="?attr/color_2"></RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="#C0C0C0"></RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="?attr/color_3"
                    android:id="@+id/list_item_8"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:paddingBottom="25dp"
                        android:paddingTop="25dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:id="@+id/icon7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/description_list_icon"
                            android:src="@drawable/about"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/title7"
                        android:layout_width="fill_parent"
                        android:paddingLeft="15dp"
                        android:background="#ffff"
                        android:text="About"
                        android:layout_height="match_parent"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!-- Displaying Drawer -->
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:src="@mipmap/home"
            android:id="@+id/homeButton"
            android:background="@color/list_background"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:id="@+id/usersButton"
            android:src="@mipmap/person"
            android:background="@color/list_background"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:src="@mipmap/gear"
            android:id="@+id/settingsButton"
            android:background="@color/list_background"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:id="@+id/calendarButton"
            android:src="@mipmap/calendar"
            android:background="@color/list_background"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:src="@mipmap/speed"
            android:id="@+id/speedButton"
            android:background="@color/list_background"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/powerButton"
            android:src="@mipmap/power"
            android:background="@color/list_background"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>

